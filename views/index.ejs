  <!-- Contact Section -->
  <section id="contact" class="contact bg-light">
    <div class="container">
      <h2 class="sectionTitle">Contact <span class="text-primary">Info</span></h2>
      <form action="mailto:joshan.basgar@gmail.com" method="post" class="phpEmailForm">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
